{
  "name": "sops-edit",
  "displayName": "SOPS easy edit",
  "description": "Never again worry about encrypting, decrypting or accidentally committing decrypted files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ShipitSmarter",
    "SOPS",
    "easy",
    "edit",
    "update",
    "encrypt",
    "decrypt",
    "auto"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sops-edit.direct-edit",
        "title": "SOPS: edit directly"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "sops-edit.direct-edit",
          "when": "resourceFilename =~ /^[\\s\\S]*\\.(yaml|yml|json|env|ini|txt)$/",
          "group": "sops-edit"
        }
      ]
    },
    "configuration": {
      "title": "SOPS Easy Edit",
      "properties": {
        "sops-edit.tempFilePreExtension": {
          "type": "string",
          "default": "tmp",
          "description": "Pre-extension added to temporary decrypted files; example: test.enc.yaml => test.enc.tmp.yaml (default: 'tmp')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "yaml": "^2.2.1"
  }
}
